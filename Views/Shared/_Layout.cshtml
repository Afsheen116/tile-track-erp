<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CeramicERP</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CeramicERP.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    @{
        var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
        var canViewDashboard = User.HasPermission(PermissionNames.ViewDashboard);
        var canViewInventory = User.HasPermission(PermissionNames.ViewInventory);
        var canManageInventory = User.HasPermission(PermissionNames.ManageInventory);
        var canViewPurchases = User.HasPermission(PermissionNames.ViewPurchases);
        var canCreatePurchase = User.HasPermission(PermissionNames.CreatePurchase);
        var canViewSales = User.HasPermission(PermissionNames.ViewSales);
        var canCreateSale = User.HasPermission(PermissionNames.CreateSale);
        var profileName = User?.Identity?.Name ?? "User";
        var profileEmail = User?.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
        var profileRole = User.GetRoleName();
        var profileInitials = "U";

        if (!string.IsNullOrWhiteSpace(profileName))
        {
            var nameParts = profileName.Split(' ', StringSplitOptions.RemoveEmptyEntries);

            if (nameParts.Length == 1)
            {
                profileInitials = nameParts[0][0].ToString().ToUpperInvariant();
            }
            else if (nameParts.Length > 1)
            {
                profileInitials = $"{char.ToUpperInvariant(nameParts[0][0])}{char.ToUpperInvariant(nameParts[1][0])}";
            }
        }
    }
    <header>
        <nav class="navbar app-navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CeramicERP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        @if (isAuthenticated && canViewDashboard)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Dashboard</a>
                            </li>
                        }

                        @if (isAuthenticated && canManageInventory)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                        }

                        @if (isAuthenticated && canViewInventory)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Tiles" asp-action="Index">Tiles</a>
                            </li>
                        }

                        @if (isAuthenticated && canViewPurchases)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Purchases" asp-action="Index">
                                    @(canCreatePurchase ? "Purchases" : "Purchase History")
                                </a>
                            </li>
                        }

                        @if (isAuthenticated && canViewSales)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Sales" asp-action="Index">
                                    @(canCreateSale ? "Sales" : "Sales History")
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown profile-dropdown">
                                <button class="nav-link profile-toggle dropdown-toggle border-0 bg-transparent" id="profileDropdownMenu" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="profile-avatar">@profileInitials</span>
                                    <span class="profile-meta">
                                        <span class="profile-name">@profileName</span>
                                        <span class="profile-role">@profileRole</span>
                                    </span>
                                </button>

                                <ul class="dropdown-menu dropdown-menu-end profile-menu shadow" aria-labelledby="profileDropdownMenu">
                                    <li class="profile-menu-header px-3 py-2">
                                        <div class="profile-menu-user">@profileName</div>
                                        <div class="profile-menu-subtitle">@profileEmail</div>
                                        <div class="profile-menu-subtitle">Role: @profileRole</div>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Auth" asp-action="Profile">
                                            <i class="fa-regular fa-user me-2"></i>My Profile
                                        </a>
                                    </li>
                                    @if (canViewDashboard)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Home" asp-action="Index">
                                                <i class="fa-solid fa-gauge-high me-2"></i>Dashboard
                                            </a>
                                        </li>
                                    }

                                    @if (canManageInventory)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Categories" asp-action="Index">
                                                <i class="fa-solid fa-layer-group me-2"></i>Categories
                                            </a>
                                        </li>
                                    }

                                    @if (canViewInventory)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Tiles" asp-action="Index">
                                                <i class="fa-solid fa-table-cells-large me-2"></i>Tiles
                                            </a>
                                        </li>
                                    }

                                    @if (canViewPurchases)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Purchases" asp-action="Index">
                                                <i class="fa-solid fa-truck-fast me-2"></i>@(canCreatePurchase ? "Purchases" : "Purchase History")
                                            </a>
                                        </li>
                                    }

                                    @if (canViewSales)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Sales" asp-action="Index">
                                                <i class="fa-solid fa-file-invoice-dollar me-2"></i>@(canCreateSale ? "Sales" : "Sales History")
                                            </a>
                                        </li>
                                    }

                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">
                                            <i class="fa-solid fa-shield-halved me-2"></i>Privacy & Policy
                                        </a>
                                    </li>
                                    <li>
                                        <button class="dropdown-item" type="button" onclick="window.location.reload();">
                                            <i class="fa-solid fa-rotate-right me-2"></i>Refresh Page
                                        </button>
                                    </li>

                                    <li><hr class="dropdown-divider" /></li>

                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Auth" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - CeramicERP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
