@model CeramicERP.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .auth-scene {
        position: relative;
        min-height: clamp(520px, calc(100vh - 250px), 760px);
        display: grid;
        place-items: center;
        padding: 1.6rem 0.35rem 2.1rem;
        overflow: hidden;
        border-radius: 22px;
        background: linear-gradient(160deg, #edf4fd 0%, #e6eef9 45%, #f4f8ff 100%);
        box-shadow:
            0 18px 30px rgba(20, 45, 78, 0.14),
            0 1px 0 rgba(255, 255, 255, 0.9) inset;
    }

    .auth-scene::before,
    .auth-scene::after {
        content: "";
        position: absolute;
        border-radius: 50%;
        pointer-events: none;
        z-index: 0;
        filter: blur(2px);
    }

    .auth-scene::before {
        width: 330px;
        height: 330px;
        top: -120px;
        left: -115px;
        background: radial-gradient(circle at center, rgba(35, 104, 188, 0.32) 0%, rgba(35, 104, 188, 0.02) 70%);
    }

    .auth-scene::after {
        width: 290px;
        height: 290px;
        bottom: -130px;
        right: -95px;
        background: radial-gradient(circle at center, rgba(26, 74, 132, 0.28) 0%, rgba(26, 74, 132, 0.02) 70%);
    }

    .auth-panel {
        position: relative;
        z-index: 2;
        width: min(100%, 520px);
        border-radius: 26px;
        padding: 1rem;
        background: linear-gradient(175deg, #f5f9ff 0%, #eaf2fd 100%);
        box-shadow:
            0 22px 38px rgba(13, 31, 58, 0.24),
            0 3px 0 rgba(255, 255, 255, 0.82) inset,
            0 -2px 0 rgba(17, 45, 80, 0.12) inset;
    }

    .auth-card {
        border-radius: 20px;
        background: linear-gradient(180deg, #ffffff 0%, #f8fbff 100%);
        border: 1px solid rgba(34, 91, 161, 0.14);
        box-shadow:
            0 12px 22px rgba(16, 37, 68, 0.14),
            0 1px 0 rgba(255, 255, 255, 0.95) inset;
        overflow: hidden;
    }

    .auth-header {
        padding: 1.2rem 1.2rem 1rem;
        background: linear-gradient(145deg, #2b66b3 0%, #1f4f92 58%, #163a6a 100%);
        color: #fff;
        text-align: center;
        box-shadow: 0 8px 20px rgba(14, 34, 64, 0.28);
    }

    .auth-badge {
        width: 54px;
        height: 54px;
        margin: 0 auto 0.65rem;
        border-radius: 50%;
        display: grid;
        place-items: center;
        font-size: 1.15rem;
        font-weight: 700;
        color: #1f4f92;
        background: linear-gradient(160deg, #ffffff 0%, #dce9fb 100%);
        box-shadow:
            0 8px 14px rgba(10, 26, 48, 0.35),
            0 1px 0 rgba(255, 255, 255, 0.95) inset;
    }

    .auth-header h1 {
        margin: 0;
        font-size: clamp(1.2rem, 2.1vw, 1.7rem);
        letter-spacing: 0.015em;
        font-weight: 700;
    }

    .auth-header p {
        margin: 0.35rem 0 0;
        font-size: 0.85rem;
        opacity: 0.9;
    }

    .auth-body {
        padding: 1.15rem 1.1rem 1.1rem;
    }

    .auth-field {
        margin-bottom: 0.78rem;
    }

    .auth-label {
        display: block;
        margin: 0 0 0.35rem;
        font-size: 0.82rem;
        font-weight: 600;
        color: #1f3b62;
    }

    .auth-input-wrap {
        position: relative;
    }

    .auth-icon {
        position: absolute;
        top: 50%;
        left: 0.88rem;
        transform: translateY(-50%);
        color: #2b66b3;
        font-size: 0.95rem;
        opacity: 0.9;
        pointer-events: none;
    }

    .auth-input {
        width: 100%;
        border: 1px solid rgba(38, 98, 170, 0.2);
        border-radius: 12px;
        background: linear-gradient(180deg, #f8fbff 0%, #edf4ff 100%);
        color: #1a2d49;
        padding: 0.74rem 0.8rem 0.74rem 2.3rem;
        box-shadow:
            0 4px 12px rgba(23, 54, 95, 0.09),
            0 1px 0 rgba(255, 255, 255, 0.95) inset;
    }

    .auth-input:focus {
        outline: none;
        border-color: #2f73c7;
        box-shadow:
            0 0 0 0.2rem rgba(40, 102, 178, 0.16),
            0 6px 14px rgba(18, 45, 78, 0.16);
    }

    .auth-submit {
        width: 100%;
        border: none;
        border-radius: 12px;
        padding: 0.78rem 1rem;
        font-size: 1.02rem;
        font-weight: 600;
        color: #fff;
        background: linear-gradient(145deg, #2d6cbb 0%, #1f4f92 56%, #163d70 100%);
        box-shadow:
            0 12px 18px rgba(11, 31, 59, 0.35),
            0 2px 0 rgba(255, 255, 255, 0.2) inset,
            0 -2px 0 rgba(6, 18, 34, 0.28) inset;
    }

    .auth-submit:hover,
    .auth-submit:focus-visible {
        filter: brightness(1.04);
        outline: none;
    }

    .auth-validation {
        display: block;
        margin-top: 0.24rem;
        color: #b4232b;
        font-size: 0.75rem;
    }

    .auth-summary {
        margin-bottom: 0.75rem;
        padding: 0.6rem 0.7rem;
        border-radius: 10px;
        color: #842029;
        background: #f8d7da;
        border: 1px solid #f1aeb5;
        font-size: 0.82rem;
    }

    .validation-summary-valid {
        display: none;
    }

    .auth-helper {
        margin-top: 0.85rem;
        text-align: center;
        font-size: 0.85rem;
        color: #4b6284;
    }

    .auth-helper a {
        color: #1f4f92;
        font-weight: 600;
        text-decoration: none;
    }

    .auth-helper a:hover,
    .auth-helper a:focus-visible {
        text-decoration: underline;
    }
</style>

<div class="auth-scene">
    <div class="auth-panel">
        <div class="auth-card">
            <div class="auth-header">
                <div class="auth-badge">CE</div>
                <h1>Create User Account</h1>
                <p>Register once and login as a normal user</p>
            </div>

            <div class="auth-body">
                <form method="post" asp-controller="Auth" asp-action="Register" autocomplete="on">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="auth-summary"></div>

                    <div class="auth-field">
                        <label asp-for="Name" class="auth-label"></label>
                        <div class="auth-input-wrap">
                            <i class="fas fa-user auth-icon"></i>
                            <input asp-for="Name" class="auth-input" placeholder="Your full name" />
                        </div>
                        <span asp-validation-for="Name" class="auth-validation"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="Email" class="auth-label"></label>
                        <div class="auth-input-wrap">
                            <i class="fas fa-envelope auth-icon"></i>
                            <input asp-for="Email" class="auth-input" placeholder="you@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="auth-validation"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="Password" class="auth-label"></label>
                        <div class="auth-input-wrap">
                            <i class="fas fa-lock auth-icon"></i>
                            <input asp-for="Password" type="password" class="auth-input" placeholder="Minimum 6 characters" />
                        </div>
                        <span asp-validation-for="Password" class="auth-validation"></span>
                    </div>

                    <div class="auth-field">
                        <label asp-for="ConfirmPassword" class="auth-label"></label>
                        <div class="auth-input-wrap">
                            <i class="fas fa-check-circle auth-icon"></i>
                            <input asp-for="ConfirmPassword" type="password" class="auth-input" placeholder="Re-enter password" />
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="auth-validation"></span>
                    </div>

                    <button type="submit" class="auth-submit">
                        Create Account
                    </button>

                    <div class="auth-helper">
                        Already have an account?
                        <a asp-controller="Auth" asp-action="Login">Login here</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
