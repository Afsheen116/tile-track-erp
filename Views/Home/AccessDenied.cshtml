@{
    ViewData["Title"] = "Access Denied";
}

<section class="py-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 720px;">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 mb-3 text-danger">Access Denied</h1>
            <p class="mb-4">
                You are signed in, but your role does not have permission to open this page.
            </p>
            <div class="d-flex gap-2 flex-wrap">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go To Dashboard</a>
                <a asp-controller="Auth" asp-action="Profile" class="btn btn-outline-secondary">My Profile</a>
            </div>
        </div>
    </div>
</section>
