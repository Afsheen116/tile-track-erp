@{
    ViewData["Title"] = "Dashboard";

    var canViewInventory = User.HasPermission(PermissionNames.ViewInventory);
    var canManageInventory = User.HasPermission(PermissionNames.ManageInventory);
    var canViewSales = User.HasPermission(PermissionNames.ViewSales);
    var canCreateSale = User.HasPermission(PermissionNames.CreateSale);
    var canViewPurchases = User.HasPermission(PermissionNames.ViewPurchases);
    var canCreatePurchase = User.HasPermission(PermissionNames.CreatePurchase);
    var canViewDashboardFinancial = User.HasPermission(PermissionNames.ViewDashboardFinancial);
    var canViewProfit = User.HasPermission(PermissionNames.ViewProfit);
}

<style>
    .erp-mobile {
        --erp-blue: #104a8d;
        --erp-icon: #1f4f92;
        --erp-accent: #2cb5ea;
        --erp-bg: #eef2f7;
        --erp-soft: #edf8ff;
        --erp-text: #1f2735;
        --erp-tile-shadow: rgba(17, 37, 66, 0.16);
        width: min(100%, 760px);
        margin: 0 auto 1rem;
        padding: 0.7rem;
        background: linear-gradient(180deg, #f7fbff 0%, #edf2f9 100%);
        border-radius: 20px;
        overflow: hidden;
        box-shadow:
            0 20px 36px rgba(24, 44, 75, 0.15),
            0 2px 0 rgba(255, 255, 255, 0.7) inset;
        perspective: 1200px;
    }

    .erp-section {
        position: relative;
        margin: 0.65rem;
        padding: 1rem 0.35rem 0.5rem;
        border-radius: 18px;
        background: linear-gradient(180deg, #ffffff 0%, #f8fbff 100%);
        box-shadow:
            0 10px 24px rgba(25, 48, 83, 0.1),
            0 1px 0 rgba(255, 255, 255, 0.9) inset;
        border-top: none;
        transform-style: preserve-3d;
        transition: transform 0.28s ease, box-shadow 0.28s ease;
    }

    .erp-section::before {
        content: "";
        position: absolute;
        left: 0.9rem;
        right: 0.9rem;
        top: 0;
        height: 4px;
        border-radius: 999px;
        background: linear-gradient(90deg, #8ac5ff 0%, #3e7fcb 55%, #245c9f 100%);
        opacity: 0.45;
    }

    .erp-section h2 {
        margin: 0 1rem 0.9rem;
        font-size: 1.05rem;
        text-transform: uppercase;
        letter-spacing: 0.02em;
        color: var(--erp-text);
    }

    .erp-grid {
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap: 0.9rem 0.55rem;
        padding: 0 0.55rem 1.05rem;
    }

    .erp-tile {
        position: relative;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 156px;
        padding: 0.78rem 0.4rem 0.82rem;
        border-radius: 16px;
        background: linear-gradient(165deg, #ffffff 0%, #f3f8ff 100%);
        border: 1px solid rgba(47, 103, 167, 0.12);
        box-shadow:
            0 7px 16px var(--erp-tile-shadow),
            0 1px 0 rgba(255, 255, 255, 0.92) inset;
        transform-style: preserve-3d;
        transition:
            transform 0.25s ease,
            box-shadow 0.25s ease,
            background 0.25s ease,
            border-color 0.25s ease,
            color 0.25s ease;
        text-align: center;
        color: var(--erp-text);
    }

    .erp-tile::after {
        content: "";
        position: absolute;
        left: 14%;
        right: 14%;
        bottom: 5px;
        height: 11px;
        border-radius: 50%;
        background: radial-gradient(ellipse at center, rgba(10, 26, 47, 0.24) 0%, rgba(10, 26, 47, 0) 72%);
        opacity: 0.2;
        transition: opacity 0.25s ease;
    }

    .erp-icon {
        width: 76px;
        height: 76px;
        margin: 0 auto 0.55rem;
        border-radius: 50%;
        display: grid;
        place-items: center;
        background: linear-gradient(150deg, #f6fcff 0%, var(--erp-soft) 100%);
        color: var(--erp-icon);
        font-size: 1.8rem;
        box-shadow:
            0 7px 14px rgba(34, 76, 124, 0.2),
            0 1px 0 rgba(255, 255, 255, 0.95) inset;
        transition: background 0.25s ease, color 0.25s ease, box-shadow 0.25s ease, transform 0.25s ease;
        transform: translateZ(18px);
    }

    .erp-tile .accent {
        color: var(--erp-accent);
    }

    .erp-label {
        font-size: 0.72rem;
        line-height: 1.2;
        min-height: 1.8rem;
        padding: 0 0.1rem;
        transition: color 0.25s ease;
    }

    .erp-value {
        margin-top: 0.15rem;
        font-size: 0.83rem;
        font-weight: 700;
        color: #0f2647;
        transition: color 0.25s ease;
    }

    .erp-section:hover {
        transform: translateY(-2px) rotateX(0.5deg);
        box-shadow:
            0 16px 30px rgba(19, 40, 73, 0.16),
            0 1px 0 rgba(255, 255, 255, 0.92) inset;
    }

    .erp-tile:hover,
    .erp-tile:focus-visible {
        color: #fff;
        background: linear-gradient(145deg, #2c66b3 0%, var(--erp-icon) 54%, #183f73 100%);
        border-color: transparent;
        box-shadow:
            0 16px 24px rgba(16, 37, 68, 0.36),
            0 2px 0 rgba(255, 255, 255, 0.2) inset,
            0 -2px 0 rgba(8, 19, 35, 0.22) inset;
        transform: translateY(-8px) rotateX(3deg);
        outline: none;
    }

    .erp-tile:hover::after,
    .erp-tile:focus-visible::after {
        opacity: 0.75;
    }

    .erp-tile:hover .erp-icon,
    .erp-tile:focus-visible .erp-icon {
        background: linear-gradient(150deg, #ffffff 0%, #dcecff 100%);
        color: var(--erp-icon);
        transform: translateZ(24px) scale(1.04);
        box-shadow:
            0 12px 18px rgba(8, 20, 39, 0.3),
            0 1px 0 rgba(255, 255, 255, 0.95) inset;
    }

    .erp-tile:hover .erp-label,
    .erp-tile:hover .erp-value,
    .erp-tile:focus-visible .erp-label,
    .erp-tile:focus-visible .erp-value {
        color: #ffffff;
    }

    .erp-tile:hover .accent,
    .erp-tile:focus-visible .accent {
        color: #ffffff;
    }

    .erp-tile:active {
        transform: translateY(-4px) scale(0.99);
    }

    @@media (max-width: 992px) {
        .erp-mobile {
            width: auto;
            margin: 0 -0.6rem 1rem;
            border-radius: 0;
            padding: 0.5rem;
        }

        .erp-grid {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }

    @@media (max-width: 720px) {
        .erp-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }

        .erp-section h2 {
            font-size: 0.98rem;
        }
    }

    @@media (max-width: 430px) {
        .erp-mobile {
            margin: 0 -0.45rem 0.8rem;
            padding: 0.4rem;
        }

        .erp-section {
            margin: 0.45rem;
            padding-top: 0.9rem;
        }

        .erp-grid {
            gap: 0.7rem 0.45rem;
            padding: 0 0.45rem 0.9rem;
        }

        .erp-tile {
            min-height: 145px;
            border-radius: 14px;
        }

        .erp-icon {
            width: 68px;
            height: 68px;
            font-size: 1.55rem;
        }

        .erp-label {
            font-size: 0.7rem;
            min-height: 1.7rem;
        }

        .erp-value {
            font-size: 0.8rem;
        }
    }

    @@media (prefers-reduced-motion: reduce) {
        .erp-section,
        .erp-tile,
        .erp-icon,
        .erp-tile::after,
        .erp-label,
        .erp-value {
            transition: none !important;
        }
    }
</style>

<div class="erp-mobile">
    @if (canViewInventory)
    {
        <section class="erp-section">
            <h2>Quick Stats</h2>
            <div class="erp-grid">
                @if (canManageInventory)
                {
                    <a class="erp-tile" asp-controller="Categories" asp-action="Index"><span class="erp-icon"><i class="fas fa-layer-group"></i></span><span class="erp-label">Categories</span><span class="erp-value">@ViewBag.TotalCategories</span></a>
                }
                <a class="erp-tile" asp-controller="Tiles" asp-action="Index"><span class="erp-icon"><i class="fas fa-border-all"></i></span><span class="erp-label">Total Tiles</span><span class="erp-value">@ViewBag.TotalTiles</span></a>
                <a class="erp-tile" asp-controller="Tiles" asp-action="Index"><span class="erp-icon"><i class="fas fa-boxes-stacked"></i></span><span class="erp-label">Stock Qty</span><span class="erp-value">@ViewBag.TotalStock</span></a>
                <a class="erp-tile" asp-controller="Tiles" asp-action="Index"><span class="erp-icon"><i class="fas fa-triangle-exclamation"></i></span><span class="erp-label">Low Stock</span><span class="erp-value">@ViewBag.LowStock</span></a>
            </div>
        </section>
    }

    @if (canViewSales || canViewPurchases)
    {
        <section class="erp-section">
            <h2>Sales & Purchase</h2>
            <div class="erp-grid">
                @if (canViewSales)
                {
                    <a class="erp-tile" asp-controller="Sales" asp-action="Index"><span class="erp-icon"><i class="fas fa-file-invoice-dollar"></i></span><span class="erp-label">Total Revenue</span><span class="erp-value">&#8377; @ViewBag.TotalRevenue</span></a>
                    <a class="erp-tile" asp-controller="Sales" asp-action="Index"><span class="erp-icon"><i class="fas fa-circle-up"></i></span><span class="erp-label">Receivable</span><span class="erp-value">&#8377; @ViewBag.TotalReceivable</span></a>
                }

                @if (canViewPurchases)
                {
                    <a class="erp-tile" asp-controller="Purchases" asp-action="Index"><span class="erp-icon"><i class="fas fa-truck-ramp-box"></i></span><span class="erp-label">Purchase Cost</span><span class="erp-value">&#8377; @ViewBag.TotalPurchaseCost</span></a>
                    <a class="erp-tile" asp-controller="Purchases" asp-action="Index"><span class="erp-icon"><i class="fas fa-circle-down"></i></span><span class="erp-label">Payable</span><span class="erp-value">&#8377; @ViewBag.TotalPayable</span></a>
                }
            </div>
        </section>
    }

    @if (canViewDashboardFinancial || canViewProfit)
    {
        <section class="erp-section">
            <h2>Finance</h2>
            <div class="erp-grid">
                @if (canViewDashboardFinancial)
                {
                    <a class="erp-tile" asp-controller="Home" asp-action="Index"><span class="erp-icon"><i class="fas fa-wallet"></i></span><span class="erp-label">Cash In Hand</span><span class="erp-value">&#8377; @ViewBag.CashBalance</span></a>
                    <a class="erp-tile" asp-controller="Home" asp-action="Index"><span class="erp-icon"><i class="fas fa-scale-balanced"></i></span><span class="erp-label">Business Position</span><span class="erp-value">&#8377; @ViewBag.BusinessPosition</span></a>
                }

                @if (canViewProfit)
                {
                    <a class="erp-tile" asp-controller="Home" asp-action="Index"><span class="erp-icon"><i class="fas fa-chart-line"></i></span><span class="erp-label">Net Profit</span><span class="erp-value">&#8377; @ViewBag.Profit</span></a>
                }
            </div>
        </section>
    }

    @if (canManageInventory || canViewInventory || canViewPurchases || canViewSales)
    {
        <section class="erp-section">
            <h2>Operations</h2>
            <div class="erp-grid">
                @if (canManageInventory)
                {
                    <a class="erp-tile" asp-controller="Categories" asp-action="Index"><span class="erp-icon"><i class="fas fa-tags"></i></span><span class="erp-label">Manage Categories</span></a>
                }

                @if (canViewInventory)
                {
                    <a class="erp-tile" asp-controller="Tiles" asp-action="Index"><span class="erp-icon"><i class="fas fa-clone"></i></span><span class="erp-label">View Stock</span></a>
                }

                @if (canViewPurchases)
                {
                    <a class="erp-tile" asp-controller="Purchases" asp-action="Index"><span class="erp-icon"><i class="fas fa-cart-plus"></i></span><span class="erp-label">@(canCreatePurchase ? "Purchase Entries" : "Purchase History")</span></a>
                }

                @if (canViewSales)
                {
                    <a class="erp-tile" asp-controller="Sales" asp-action="Index"><span class="erp-icon"><i class="fas fa-cash-register"></i></span><span class="erp-label">@(canCreateSale ? "Sales Entries" : "Sales History")</span></a>
                }
            </div>
        </section>
    }
</div>
