@model CeramicERP.Models.SaleViewModel

<h2>Add Sale</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="CustomerName" class="form-label">Customer Name</label>
        <input asp-for="CustomerName" class="form-control" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TileId" class="form-label">Tile</label>
        <select asp-for="TileId"       asp-items="ViewBag.Tiles"             class="form-select">
            <option value="">-- Select Tile --</option>
        </select>
        <span asp-validation-for="TileId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PaymentType" class="form-label"></label>
        <select asp-for="PaymentType" class="form-select">
            <option value="Cash">Cash</option>
            <option value="Credit">Credit</option>
            <option value="Partial">Partial</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="PaidAmount" class="form-label"></label>
        <input asp-for="PaidAmount" type="number" step="0.01" class="form-control" />
    </div>







    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" type="number" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}